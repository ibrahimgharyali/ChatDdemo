<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/ic_round_10dp_white_rect"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.ibrahim.chatddemo.gui.FontTextView
                android:id="@id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/higher_voted"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <com.example.ibrahim.chatddemo.gui.FontTextView
                    android:id="@id/comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:gravity="center_vertical"
                    android:text="@string/text_comment"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <com.example.ibrahim.chatddemo.gui.FontTextView
                    android:id="@+id/comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/text_time_value"
                    android:textColor="@color/brand_gray_double_dark"
                    android:textSize="@dimen/text_10"
                    android:singleLine="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/comment_text"
                    />
            </RelativeLayout>
        </LinearLayout>


    </TableRow>
</LinearLayout>